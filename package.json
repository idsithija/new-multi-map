{
  "name": "battle-royale-game",
  "version": "1.0.0",
  "type": "module",
  "description": "A multiplayer battle royale web game with Three.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch src/server/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "node dist/server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "three": "^0.160.0",
    "tweakpane": "^4.0.5"
  },
  "devDependencies": {
    "@tweakpane/core": "^2.0.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/three": "^0.160.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  }
}
